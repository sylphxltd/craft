{
  "name": "@sylphx/craft",
  "version": "1.2.1",
  "description": "A lightweight, functional, and blazingly fast alternative to immer for immutable state updates",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./debug": {
      "import": "./dist/index-debug.js",
      "types": "./dist/index-debug.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun test"
  },
  "keywords": [
    "immutable",
    "state",
    "immer",
    "functional",
    "copy-on-write",
    "performance",
    "typescript"
  ],
  "author": "SylphX Ltd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphxltd/craft.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "immer": "^10.1.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
